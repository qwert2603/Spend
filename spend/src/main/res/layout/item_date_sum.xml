<?xml version="1.0" encoding="utf-8"?><!-- FrameLayout is for highlight animation -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="6dp">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/date_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="today" />

        <!--
        invisible text to make all date_TextViews same width.
        because "today" is thinner than "0000-00-00".
        -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000-00-00"
            android:textSize="16sp"
            android:visibility="invisible"
            tools:ignore="HardcodedText" />

    </FrameLayout>

    <TextView
        android:id="@+id/profitsSum_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/profit"
        android:textSize="18sp"
        tools:text="175" />

    <TextView
        android:id="@+id/spendsSum_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/spend"
        android:textSize="18sp"
        tools:text="175" />

</LinearLayout>

