<?xml version="1.0" encoding="utf-8"?><!-- FrameLayout is for highlight animation -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="6dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/local_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_local"
            tools:tint="@color/local_change_edit" />

        <TextView
            android:id="@+id/id_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="3"
            android:minEms="3"
            android:textColor="#444444"
            android:textSize="14sp"
            tools:text="191826" />

        <FrameLayout
            android:id="@+id/date_FrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/date_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                tools:text="@string/today_text" />

            <!--
            invisible text to make all date_TextViews same width.
            because "today" is thinner than "0000-00-00".
            -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000-00-00"
                android:textSize="16sp"
                android:visibility="invisible"
                tools:ignore="HardcodedText" />

        </FrameLayout>

        <TextView
            android:id="@+id/kind_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:textColor="@color/spend"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="food" />

        <TextView
            android:id="@+id/value_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            tools:text="175" />

    </LinearLayout>

</FrameLayout>